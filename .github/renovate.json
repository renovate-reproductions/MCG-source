{
  "extends": ["config:base"],
  "timezone": "Asia/Tokyo",
  "labels": ["dependencies"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "patch": {
    "automerge": true
  },
  "ignoreDeps": ["node"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ]
}